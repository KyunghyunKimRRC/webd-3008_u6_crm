<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
        <% if show_link %>
          <%= link_to customer.full_name, customer %>
        <% else %>
          <%= customer.full_name %>
        <% end %>
      </p>
      <p>Customer: <%= link_to customer.full_name, customer %></p>
      <% if customer.image.present? %>
        <div class="card-image">
          <figure class="image">
            <%= image_tag customer.image.variant(resize_to_limit:[500,500]) %>
          </figure>
        </div>
      <% end %>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        Phone Number: <br><%= customer.phone_number %>
      </p>
      <p class="card-footer-item">
        Email Address: <br><%= customer.email_address %>
      </p>
      <p class="card-footer-item">
        Notes: <br><%= customer.notes %>
      </p>
    </footer>
  </div>
</div>
